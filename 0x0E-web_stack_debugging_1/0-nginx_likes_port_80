#!/usr/bin/env bash
# Nginx configuration script to listen on port 80
# Remove the default Nginx site configuration
rm /etc/nginx/sites-enabled/default

# Create a new Nginx site configuration with a simple server block listening on port 80
echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    root /var/www/html;
    index index.html index.htm;

    location / {
        try_files \$uri \$uri/ =404;
    }
}" > /etc/nginx/sites-available/default

# Create a symbolic link to enable the new configuration
ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Restart Nginx to apply changes
service nginx restart

# Output a message indicating the completion of the configuration
echo "Nginx configured to listen on port 80"

